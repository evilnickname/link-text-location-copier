{
    "manifest_version": 2,
    "name": "Link Text and Location Copier",
    "description": "__MSG_extensionDescription__",
    "version": "1.4.0",
    "homepage_url": "https://github.com/evilnickname/link-text-location-copier",
    "default_locale": "en",

    "background": {
      "scripts": [
        "defaults.js",
        "linktextlocationcopier.js"
      ]
    },

    "options_ui": {
      "page": "options/index.html",
      "browser_style": false
    },

    "icons": {
      "48": "/icons/paint-brush.svg",
      "96": "/icons/paint-brush.svg"
    },

    "permissions": [
      "activeTab",
      "contextMenus",
      "clipboardWrite",
      "storage"
    ]
}
